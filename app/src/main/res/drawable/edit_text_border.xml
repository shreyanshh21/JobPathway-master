<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <stroke
        android:width="1dp"
        android:color="@color/grey" />  <!-- Border color -->
    <corners android:radius="8dp" />  <!-- Optional: rounded corners -->
    <solid android:color="@android:color/transparent" />  <!-- Transparent fill -->
    <!-- Optional: add padding here if you want space between the border and content -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>